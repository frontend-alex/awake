{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    
    "types": ["vitest/globals", "node"],
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/client/src/*"],
      "@server/*": ["./app/server/src/*"],
      "@shared/*": ["./packages/shared/src/*"],
      "@tests/*": ["./tests/*"]
    },

    "jsx": "react-jsx"
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "app/*/dist",
    "app/*/build",
    "packages/*/build"
  ],
  "references": [
    { "path": "./app/client" },
    { "path": "./app/server" },
    { "path": "./packages/shared" }
  ]
}

